<Window x:Class="Cooka_Контроль.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cooka_Контроль"
        mc:Ignorable="d"
        Title="HistoryWindow" Height="800" Width="400">
    <Grid Background="Aqua">
        <Button x:Name="ClearHistory" Click="ClearHistory_Click" Width="140" Height="30" Content="Очистить историю" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 5 0 0"/>
        <Border Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="2" BorderThickness="2" BorderBrush="OrangeRed"  Margin="10 40 10 30">
            <TextBlock x:Name="HistoryBox" Background="White" FontSize="12"/>
        </Border>
    </Grid>
</Window>
